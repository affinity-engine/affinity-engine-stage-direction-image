{{#affinity-engine-animation-box-wrapper
  animationAdapter=animationLibrary
  classNames="ae-hidden ae-animation-box-wrapper"
  transitions=transitions
  didCompleteQueue=(action resolve)
  externalAction=(action "compose")
}}
  {{#each layers as |layer|}}
    {{affinity-engine-stage-direction-image-layer
      animationLibrary=animationLibrary
      height=height
      keyframe=layer.keyframe
      layer=layer.layer
      transitions=layer.transitions
      engineId=engineId
      windowId=windowId
    }}
  {{/each}}
{{/affinity-engine-animation-box-wrapper}}
